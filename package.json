{
  "name": "hpq",
  "version": "1.3.0",
  "description": "Utility to parse and query HTML into an object shape",
  "homepage": "https://github.com/aduth/hpq",
  "bugs": {
    "url": "https://github.com/aduth/hpq/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aduth/hpq.git"
  },
  "main": "dist/hpq.js",
  "module": "es/index.js",
  "files": [
    "dist",
    "es",
    "src"
  ],
  "scripts": {
    "build:es": "babel src --out-dir es",
    "build:umd": "rollup -c",
    "build": "npm run build:es && npm run build:umd",
    "dev": "rollup -c -w",
    "lint": "eslint . --ignore-pattern dist --ignore-pattern es",
    "unit-test": "NODE_ENV=test mocha --compilers js:@babel/register",
    "test": "npm run unit-test && npm run lint",
    "prepublishOnly": "npm run build"
  },
  "author": {
    "name": "Andrew Duthie",
    "email": "andrew@andrewduthie.com",
    "url": "http://andrewduthie.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@aduth/eslint-config": "^3.0.0",
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.8.0",
    "eslint-plugin-jsdoc": "^3.9.1",
    "jsdom": "^13.0.0",
    "mocha": "^5.2.0",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-uglify": "^6.0.0",
    "rollup-watch": "^4.3.1"
  }
}
