{
	"root": true,
	"extends": [
		"eslint:recommended",
		"prettier",
		"plugin:@typescript-eslint/recommended"
	],
	"plugins": ["prettier"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"project": [ "./tsconfig.json" ]
	},
	"env": {
		"es6": true,
		"browser": true,
		"mocha": true,
		"node": true
	},
	"rules": {
		"prettier/prettier": "error"
	}
}
